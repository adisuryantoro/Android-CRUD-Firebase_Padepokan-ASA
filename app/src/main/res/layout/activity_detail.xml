<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    tools:context=".feature.DetailActivity">
    
    <TextView
        android:id="@+id/tv_detail_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_thirty"
        android:layout_margin="@dimen/horizontal_margin_sixteen"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:text="Title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_detail_title_data"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_thirty"
        android:layout_margin="@dimen/horizontal_margin_sixteen"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_title" />

    <TextView
        android:id="@+id/tv_detail_desc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_thirty"
        android:layout_margin="@dimen/horizontal_margin_sixteen"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:text="Description"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_title_data" />

    <TextView
        android:id="@+id/tv_detail_desc_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/horizontal_margin_sixteen"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="top|start"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_desc" />


</androidx.constraintlayout.widget.ConstraintLayout>