<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    tools:context=".feature.AddNoteActivity">

    <TextView
        android:id="@+id/tv_add_note_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_thirty"
        android:layout_margin="@dimen/horizontal_margin_sixteen"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:text="Title"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_add_note_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_thirty"
        android:layout_margin="@dimen/horizontal_margin_sixteen"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/tv_add_note_title" />

    <TextView
        android:id="@+id/tv_add_note_desc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_thirty"
        android:layout_margin="@dimen/horizontal_margin_sixteen"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:text="Description"
        app:layout_constraintTop_toBottomOf="@id/edt_add_note_title" />

    <EditText
        android:id="@+id/edt_add_note_desc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/horizontal_margin_sixteen"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="top|start"
        app:layout_constraintTop_toBottomOf="@id/tv_add_note_desc" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fb_add_note_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/textsize_twenty_four"
        android:src="@drawable/ic_send_send_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>